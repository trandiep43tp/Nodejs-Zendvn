   <% include ../../helpers/status-filter %>
   <% include ../../helpers/action %>
   <% include ../../helpers/status %>  
   <% include ../../helpers/pagination %>

   <!--Kéo vào câu thông báo-->
   <%- locals.flash %>
   <!-- <div class="alert alert-success" role="alert">            
        <span class="close-btn">&times;</span> 
